---
// src/components/ImageText.astro
const { profile, technologies } = Astro.props;
---

<div class="grid lg:grid-cols-2 justify-items-center mb-5">
  <img
    class="h-[80%] w-[30%] rounded-md"
    src={profile.imageUrl}
    alt="Image"
  />
  <div class="text-center md:text-start text-2xl">
    <p class="font-bold mb-2">{profile.presentationText} </p>
    <p>{profile.experienceText} </p>
    <p class="text-2xl mt-5 mb-5">{profile.stackText}</p>
    <ul class="grid grid-cols-2 ml-10 md:ml-0 md:justify-items-start gap-4">
      {
        technologies.map((tech: any) => (
          <li class="flex mb-2">
            <div class="flex items-center">
              <svg
                class="w-6 h-6 fill-current text-indigo-800"
                viewBox="0 0 24 24"
              >                
                <path
                  d="M16.0303 10.0303C16.3232 9.73744 16.3232 9.26256 16.0303 8.96967C15.7374 8.67678 15.2626 8.67678 14.9697 8.96967L10.5 13.4393L9.03033 11.9697C8.73744 11.6768 8.26256 11.6768 7.96967 11.9697C7.67678 12.2626 7.67678 12.7374 7.96967 13.0303L9.96967 15.0303C10.2626 15.3232 10.7374 15.3232 11.0303 15.0303L16.0303 10.0303Z"
                />
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M12 1.25C6.06294 1.25 1.25 6.06294 1.25 12C1.25 17.9371 6.06294 22.75 12 22.75C17.9371 22.75 22.75 17.9371 22.75 12C22.75 6.06294 17.9371 1.25 12 1.25ZM2.75 12C2.75 6.89137 6.89137 2.75 12 2.75C17.1086 2.75 21.25 6.89137 21.25 12C21.25 17.1086 17.1086 21.25 12 21.25C6.89137 21.25 2.75 17.1086 2.75 12Z"
                />
              </svg>
              <h1 class="ml-2">{tech}</h1>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>
