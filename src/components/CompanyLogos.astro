---
import type { companyLogo } from "../interfaces/interfaces";
const { logos } = Astro.props;
---

<div
  x-data="{}"
  x-init="$nextTick(() => {
    let ul = $refs.logos;
    ul.insertAdjacentHTML('afterend', ul.outerHTML);
    ul.nextSibling.setAttribute('aria-hidden', 'true');
})"
  class="w-full inline-flex flex-nowrap mb-10 overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]"
>
  <ul
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
  >
    {
      logos.map((logo: companyLogo) => (
        <li>
          <img
            class="h-8"
            src={logo.url}
            alt={logo.name}
          />
        </li>
      ))
    }
  </ul>
</div>
